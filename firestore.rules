rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Only allow authorized emails
    function isAuthorized() {
      return request.auth != null && 
             (request.auth.token.email == 'abdullahyaqub555@gmail.com' || 
              request.auth.token.email == '2020cs72@gmail.com');
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Day Plans collection
    match /dayPlans/{planId} {
      allow read: if request.auth != null;
      allow create: if isAuthorized();
      allow update, delete: if isAuthorized() && request.auth.uid == resource.data.ownerId;
    }
    
    // Events (Treats) collection
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create: if isAuthorized();
      allow update, delete: if isAuthorized();
    }
  }
}

